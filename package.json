{
  "name": "pdf-merger",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "description": "一个智能的 PDF 合并工具，支持 AI 总结和目录生成",
  "author": "Your Name <your.email@example.com>",
  "scripts": {
    "dev": "vite",
    "build": "node node_modules/typescript/lib/tsc.js && node node_modules/vite/bin/vite.js build",
    "preview": "vite preview",
    "postinstall": "chmod +x node_modules/.bin/* 2>/dev/null || true",
    "electron:dev": "electron .",
    "electron:build": "electron-builder --win --x64"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource/noto-sans-sc": "^5.2.9",
    "clsx": "^2.1.1",
    "fontkit": "^2.0.4",
    "lucide-react": "^0.460.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.624",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-pdf": "^9.1.0",
    "tailwind-merge": "^2.5.4",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "@types/fontkit": "^2.0.8",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.0",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.yourname.pdf-merger",
    "productName": "PDF 智能合并工具",
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "win": {
      "target": "dir",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.ico"
    }
  }
}
